[Unit]
Description=mtg - MTProto proxy server
Documentation=https://github.com/9seconds/mtg
After=network.target

[Service]
ExecStart=/opt/GITHUB_REPOSITORY/other/telegram/tgo/mtg/mtg run /opt/GITHUB_REPOSITORY/other/telegram/tgo/mtg.toml
Restart=always
RestartSec=3
DynamicUser=true
AmbientCapabilities=CAP_NET_BIND_SERVICE
StandardOutput=file:/opt/GITHUB_REPOSITORY/log/system/telegram.out.log
StandardError=file:/opt/GITHUB_REPOSITORY/log/system/telegram.err.log
[Install]
WantedBy=multi-user.target