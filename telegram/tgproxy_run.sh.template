#!/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

cd /opt/GITHUB_REPOSITORY/telegram/MTProxy/objs/bin/

SERVER_IP="$(curl http://v4.ident.me/ -sS)"
CURL_EXIT_STATUS=$?
if [ $CURL_EXIT_STATUS -ne 0 ]; then
    SERVER_IP=$(curl -Lso- https://api.ipify.org)
fi
CPU_CORES=$(nproc --all)
NEW_CORE=$((CPU_CORES - 1))
ARGS_STR="-u nobody -H 1001 -S defaultusersecret -D TELEGRAM_FAKE_TLS_DOMAIN -M $NEW_CORE --aes-pwd proxy-secret proxy-multi.conf --nat-info :$SERVER_IP"
TAG=telegramadtag
if [ -n "$TAG" ]; then
    ARGS_STR+=" -P $TAG "
fi


/opt/MTProxy/objs/bin/mtproto-proxy  $ARGS_STR