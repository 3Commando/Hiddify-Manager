{
    "configurations": [
        {
            "name": "Run HiddifyPanel (apply config and run flask)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "preLaunchTask": "build-hiddify-server",
            "cwd": "${workspaceFolder}/hiddify-panel/src/",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                // "--no-reload",
                "--host",
                "0.0.0.0",
                "--port",
                "9000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}