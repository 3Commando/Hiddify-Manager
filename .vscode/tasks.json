{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-hiddify-server", // Define the build task
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pushd ${workspaceFolder} &&make build && (systemctl kill hiddify-panel||echo '')&&popd"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}